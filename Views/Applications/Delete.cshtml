@model JobApplicationTracker.Models.Application

@{
    ViewData["Title"] = "Başvuruyu Sil";
}

<div class="container mt-4">
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Başvuruyu Sil
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Bu başvuruyu silmek istediğinizden emin misiniz?
                </div>

                <div class="mb-3">
                    <strong>Firma:</strong> @Model.CompanyName
                </div>
                <div class="mb-3">
                    <strong>Pozisyon:</strong> @Model.Position
                </div>
                <div class="mb-3">
                    <strong>Başvuru Tarihi:</strong> @Model.ApplicationDate.ToString("dd.MM.yyyy")
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Evet, Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>





                       